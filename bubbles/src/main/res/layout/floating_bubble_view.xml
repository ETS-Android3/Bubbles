<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="48dp"
    android:layout_height="48dp">

    <ImageView
        android:id="@+id/bubble_background"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/floating_bubble_description"
        android:src="@drawable/bubble_default_icon" />

    <FrameLayout
        android:id="@+id/notification_view"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/notification_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/rounded_notification_background" />

        <TextView
            android:id="@+id/counter_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/cardview_light_background"
            android:textSize="11sp" />
    </FrameLayout>
</FrameLayout>